{
    "name": "@nixjs23n6/hd-wallet-adapter",
    "version": "1.2.1",
    "description": "Small package that can convert a seed phrase to a master private key and a public address. Can be used to generate those as well.",
    "sideEffects": false,
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "browser": "lib/esm/index.js",
    "types": "lib/types/index.d.ts",
    "keywords": [
        "grpc",
        "grpc-web",
        "grpc-client",
        "grpc-web-client",
        "wallet-adapter",
        "grpc-toolkit",
        "toolkit",
        "protobuf",
        "typescript",
        "web"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nixjs/wallet-adapter.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "url": "https://github.com/nixjs",
        "name": "nghinv"
    },
    "license": "MIT",
    "files": [
        "lib"
    ],
    "scripts": {
        "clean": "rimraf lib/*",
        "build:pre": "run-s clean",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build": "run-s build:pre build:cjs build:esm",
        "lint": "eslint 'src/**/*.{ts,tsx}'",
        "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
    },
    "dependencies": {
        "@noble/hashes": "^1.1.3",
        "aptos": "^1.4.0",
        "buffer": "^6.0.3",
        "js-crypto-hmac": "^1.0.4",
        "lodash-es": "^4.17.21",
        "tweetnacl": "^1.0.3"
    },
    "peerDependencies": {
        "@nixjs23n6/objectify": ">=0.0.1",
        "@nixjs23n6/types": "^1.0.15",
        "@nixjs23n6/utilities-adapter": "^1.2.1",
        "lodash-es": "^4.17.21"
    },
    "devDependencies": {
        "@nixjs23n6/objectify": ">=0.0.1",
        "@nixjs23n6/types": "^1.0.15",
        "@nixjs23n6/utilities-adapter": "^1.2.1",
        "@types/lodash-es": "^4.17.6",
        "lodash-es": "^4.17.21"
    }
}
